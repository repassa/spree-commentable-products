<div class="col-md-12 product-add-comment" data-hook="product-add-comment">
  <%= form_for(:comment, url: comments_path) do |f| %>
    <%= hidden_field_tag "comment[product_id]", product.id %>
    <%= hidden_field_tag :product_id, product.id %>

    <fieldset data-hook="admin_comment_form_fields" class="no-border-top">
      <fieldset class="index no-border-bottom">
        <legend align="center"><%= Spree.t(:add_comment) %></legend>

        <div data-hook="comment_fields" class="row">
          <div class="col-md-12">
            <div class="field">
              <%= f.label :title, Spree.t('activerecord.attributes.comment.title') %>
              <%= f.text_field :title, style: 'height:150px;', class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-12">
            <div class="field">
              <%= f.label :body, Spree.t('activerecord.attributes.comment.body') %>
              <%= f.text_area :body, style: 'height:150px;', class: 'form-control' %>
            </div>
          </div>
        </div>
      </fieldset>

      <div class="clear"></div>

      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button Spree.t(:ask), 'icon-arrow-right' %>
      </div>
    </fieldset>
  <% end %>
</div>
